<Page x:Class="CalculatingFF.Pages.SettingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CalculatingFF.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SettingPage">
    <Page.Resources>
        <Style  TargetType="TextBox">
            <Setter Property="Margin" Value="5 0 20 15"/> <!-- left top right bot   -->
            <Setter Property="Height" Value="25"></Setter>
        </Style>
        <Style  TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="18" ></Setter>
        </Style>
    </Page.Resources>
    <Grid>
        <StackPanel>
            <TextBlock HorizontalAlignment="Center" Margin="15" Text="Настройки" FontSize="24"/>
            

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>

                <TextBlock Text="Точность" />
                <TextBox Text="{Binding Tolerance}" x:Name="ToleranceTextBox" Grid.Row="0" Grid.Column="1" />
                <TextBlock Text="Шаг" Grid.Row="1" Grid.Column="0" />
                <TextBox Text="{Binding Step}" x:Name="StepTextBox" Grid.Row="1" Grid.Column="1" />
                <Button Click="SaveToJson_Click" Content="Сохранить" Grid.Row="2" Grid.ColumnSpan="2" Margin="30 15" />
                <Button Click="ResetClick" Content="По умолчанию" Grid.Row="3" Grid.ColumnSpan="2" Margin="30 15" />
            </Grid>
        </StackPanel>
       

    </Grid>
</Page>
